<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
  <div id = "error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
    <%= f.label :Title, {class: "book_title"} %>
    <%= f.text_field :title %>
</div>

<div class="field">
    <%= f.label :Body, {class: "book_body"}%>
    <%= f.text_area :body %>
</div>


<div class="action">
    <%= f.submit 'Update Book', {class: "update"} %>
</div>
<% end %>

<span><%= link_to "Show", book_path(@book.id), {class: "show"}  %></span>|<span><%= link_to "Back", books_path, {class: "back"}  %></span>
